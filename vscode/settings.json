  "clangd.path": "/home/vladzht1/.config/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/17.0.3/clangd_17.0.3/bin/clangd",
  "workbench.colorTheme": "Best Themes - Andromeda Mariana",
  "editor.unicodeHighlight.nonBasicASCII": false,
  "remote.SSH.remotePlatform": {
    "*.gitpod.io": "linux"
  }
}

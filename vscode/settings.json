{
  // Editor
  "editor.fontFamily": "\"Pragmata Pro Mono\", \"JetBrains Mono\", \"Encode Sans Regular\", \"Roboto Mono\", \"Consolas\", monospace",
  "editor.fontSize": 15,
  "editor.tabSize": 2,
  "editor.rulers": [120],
  "editor.cursorSurroundingLines": 8,
  "editor.fontLigatures": false,
  "editor.cursorBlinking": "solid",
  "editor.suggest.showWords": false,
  "editor.wordBasedSuggestions": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.unicodeHighlight.includeStrings": false,
  "editor.mouseWheelZoom": true,
  "editor.smartSelect.selectSubwords": true,
  "editor.suggestSelection": "first",
  "editor.snippetSuggestions": "none",
  "editor.smoothScrolling": true,
  "editor.stickyScroll.maxLineCount": 5,
  "editor.mouseWheelScrollSensitivity": 2,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.unicodeHighlight.allowedLocales": { "ru": true },
  "editor.codeActionsOnSave": {
    "source.sortImports": true,
    "source.fixAll.eslint": true
  },

  // Workbench
  "workbench.colorTheme": "One Monokai",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.iconTheme": "bearded-icons",
  "window.menuBarVisibility": "toggle",

  // Terminal
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.defaultProfile.linux": "fish",

  // Files
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,

  // Git
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",

  // Settings
  "diffEditor.codeLens": true,
  "explorer.confirmDelete": false,
  "search.useGlobalIgnoreFiles": true,
  "security.workspace.trust.untrustedFiles": "open",
  "markdown.editor.pasteUrlAsFormattedLink.enabled": true,

  // Languages
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.inlayHints.typeHints.hideClosureInitialization": false,
  "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "never",
  "rust-analyzer.inlayHints.typeHints.hideNamedConstructor": false,
  "rust-analyzer.diagnostics.useRustcErrorCode": false,

  "dotnetAcquisitionExtension.existingDotnetPath": [
    {
      "extensionId": "msazurermtools.azurerm-vscode-tools",
      "path": "~/.dotnet/dotnet"
    }
  ],

  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "vue.inlayHints.optionsWrapper": false,

  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },

  "[python]": {
    "editor.formatOnType": true
  },

  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },

  // Extensions settings
  "tabnine.experimentalAutoImports": true,
  "remote.SSH.defaultExtensions": ["gitpod.gitpod-remote-ssh"],
  "cSpell.language": "en,ru",

  // Remove cursive characters
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.block",
          "comment.block.documentation",
          "comment.line",
          "constant",
          "constant.character",
          "constant.character.escape",
          "constant.numeric",
          "constant.numeric.integer",
          "constant.numeric.float",
          "constant.numeric.hex",
          "constant.numeric.octal",
          "constant.other",
          "constant.regexp",
          "constant.rgb-value",
          "emphasis",
          "entity",
          "entity.name",
          "entity.name.class",
          "entity.name.function",
          "entity.name.method",
          "entity.name.section",
          "entity.name.selector",
          "entity.name.tag",
          "entity.name.type",
          "entity.other",
          "entity.other.attribute-name",
          "entity.other.inherited-class",
          "invalid",
          "invalid.deprecated",
          "invalid.illegal",
          "keyword",
          "keyword.control",
          "keyword.operator",
          "keyword.operator.new",
          "keyword.operator.assignment",
          "keyword.operator.arithmetic",
          "keyword.operator.logical",
          "keyword.other",
          "markup",
          "markup.bold",
          "markup.changed",
          "markup.deleted",
          "markup.heading",
          "markup.inline.raw",
          "markup.inserted",
          "markup.italic",
          "markup.list",
          "markup.list.numbered",
          "markup.list.unnumbered",
          "markup.other",
          "markup.quote",
          "markup.raw",
          "markup.underline",
          "markup.underline.link",
          "meta",
          "meta.block",
          "meta.cast",
          "meta.class",
          "meta.function",
          "meta.function-call",
          "meta.preprocessor",
          "meta.return-type",
          "meta.selector",
          "meta.tag",
          "meta.type.annotation",
          "meta.type",
          "punctuation.definition.string.begin",
          "punctuation.definition.string.end",
          "punctuation.separator",
          "punctuation.separator.continuation",
          "punctuation.terminator",
          "storage",
          "storage.modifier",
          "storage.type",
          "string",
          "string.interpolated",
          "string.other",
          "string.quoted",
          "string.quoted.double",
          "string.quoted.other",
          "string.quoted.single",
          "string.quoted.triple",
          "string.regexp",
          "string.unquoted",
          "strong",
          "support",
          "support.class",
          "support.constant",
          "support.function",
          "support.other",
          "support.type",
          "support.type.property-name",
          "support.variable",
          "variable",
          "variable.language",
          "variable.name",
          "variable.other",
          "variable.other.readwrite",
          "variable.parameter"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "C_Cpp.intelliSenseEngine": "disabled"
}

{
  // Editor
  // "editor.fontFamily": "\"Cascadia Mono PL a\", Iosevka Extended, \"Encode Sans Regular\", \"Roboto Mono\", \"Consolas\", monospace",
  "editor.fontFamily": "\"Pragmata Pro Mono\", monospace",
  // "editor.fontFamily": "\"JetBrains Mono\", monospace",

  "editor.fontSize": 17,
  "editor.tabSize": 2,
  "editor.rulers": [120],
  "editor.cursorSurroundingLines": 8,
  "editor.fontLigatures": false,
  "editor.cursorBlinking": "expand",
  "editor.suggestSelection": "first",
  "editor.suggest.showWords": false,
  "editor.suggest.showReferences": true,
  "editor.snippetSuggestions": "none",
  "editor.wordBasedSuggestions": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.unicodeHighlight.includeStrings": false,
  "editor.mouseWheelZoom": true,
  "editor.smartSelect.selectSubwords": true,
  "editor.smoothScrolling": true,
  "editor.stickyScroll.maxLineCount": 5,
  "editor.mouseWheelScrollSensitivity": 3,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.inlayHints.enabled": "off",
  "editor.unicodeHighlight.allowedLocales": { "ru": true },
  "editor.codeActionsOnSave": {
    "source.sortImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "workbench.editor.empty.hint": "hidden",
  "workbench.iconTheme": "bearded-icons",
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "window.menuBarVisibility": "toggle",

  // Terminal
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.defaultProfile.linux": "fish",

  // Files
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",

  // Git
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  "scm.experimental.showHistoryGraph": true,

  // Settings
  "diffEditor.codeLens": true,
  "explorer.confirmDelete": false,
  "search.useGlobalIgnoreFiles": true,
  "security.workspace.trust.untrustedFiles": "open",
  "markdown.editor.pasteUrlAsFormattedLink.enabled": "smart",
  "prettier.printWidth": 120,

  // Languages
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.inlayHints.typeHints.hideClosureInitialization": false,
  "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "never",
  "rust-analyzer.inlayHints.typeHints.hideNamedConstructor": false,
  "rust-analyzer.diagnostics.useRustcErrorCode": false,

  "dotnetAcquisitionExtension.existingDotnetPath": [
    {
      "extensionId": "msazurermtools.azurerm-vscode-tools",
      "path": "~/.dotnet/dotnet"
    }
  ],

  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "vue.inlayHints.optionsWrapper": false,

  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },

  "auto-close-tag.disableOnLanguage": ["typescript"],

  "[python]": {
    "editor.formatOnType": true
  },

  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },

  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },

  "C_Cpp.intelliSenseEngine": "disabled",

  // Extensions settings
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.enabledInMergeConflict": true,
  "errorLens.editorHoverPartsEnabled": {
    "messageEnabled": false,
    "sourceCodeEnabled": false,
    "buttonsEnabled": false
  },
  "tabnine.experimentalAutoImports": true,
  "remote.SSH.defaultExtensions": ["gitpod.gitpod-remote-ssh"],
  "cSpell.language": "en,ru",
  "cSpell.userWords": ["Dtos", "glfw"],
  "cmake.showOptionsMovedNotification": false,
  "files.exclude": {
    "**/.trunk/*actions/": true,
    "**/.trunk/*logs/": true,
    "**/.trunk/*notifications/": true,
    "**/.trunk/*out/": true,
    "**/.trunk/*plugins/": true
  },
  "files.watcherExclude": {
    "**/.trunk/*actions/": true,
    "**/.trunk/*logs/": true,
    "**/.trunk/*notifications/": true,
    "**/.trunk/*out/": true,
    "**/.trunk/*plugins/": true
  },
  "vsicons.dontShowNewVersionMessage": true,

